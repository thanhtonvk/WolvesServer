@model IEnumerable<WolvesServer.EF.Video>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Video</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", null, new
    {
        @class = "btn btn-primary"
    })
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LinkYoutube)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LinkVideo)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LinkYoutube)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LinkVideo)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new {id = item.Id}, new {@class = "btn btn-success"})

                @Html.ActionLink("Xóa", "Delete", new {id = item.Id}, new {@class = "btn btn-danger"})
            </td>
        </tr>
    }

</table>