

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using WolvesServer.EF
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<DoiTien> listWaiting = ViewBag.ListWaiting;
    List<DoiTien> listConfirm = ViewBag.ListConfirm;


}

<h2>Đổi tiền</h2>
<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Đang đợi xác nhận</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Đã xác nhận</button>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <table class="table table-bordered table-striped">

            <tr>
                <th>
                  Số lượng Wol
                </th>
                <th>
                  ID Tài khoản
                </th>
                <th>
                    Số tài khoản
                </th>
                <th>
                  Ngân hàng
                </th>
                <th>
                 Tên chủ tài khoản
                </th>
              
                <th></th>
            </tr>

            @foreach (var item in listWaiting)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdAccount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.STK)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bank)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameBank)
                    </td>
                    
                    <td>
                        @Html.ActionLink("Xác nhận", "Confirm", new { id = item.Id },new { @class = "btn btn-success" })
               
                      
                    </td>
                </tr>
            }
        </table>


    </div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <table class="table table-bordered table-striped">

            <tr>
                <th>
                    Số lượng Wol
                </th>
                <th>
                    ID Tài khoản
                </th>
                <th>
                    Số tài khoản
                </th>
                <th>
                    Ngân hàng
                </th>
                <th>
                    Tên chủ tài khoản
                </th>

                <th></th>
            </tr>

            @foreach (var item in listConfirm)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdAccount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.STK)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bank)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameBank)
                    </td>

                   
                </tr>
            }
        </table>
    </div>
   
</div>
