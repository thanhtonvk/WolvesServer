@model IEnumerable<WolvesServer.EF.NewWolf>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Tin tức Wolves</h2>


<p>
    @Html.ActionLink("Thêm mới", "Create", null, new
    {
        @class = "btn btn-primary"
    })
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titile)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titile)
            </td>

            <td>
                <img src="@item.Image" height="100"/>

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new {id = item.Id}, new {@class = "btn btn-success"})

                @Html.ActionLink("Xóa", "Delete", new {id = item.Id}, new {@class = "btn btn-danger"})
            </td>
        </tr>
    }

</table>